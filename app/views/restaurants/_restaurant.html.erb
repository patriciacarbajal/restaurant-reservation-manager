<div class='error-notices'>
  <% if @restaurant.errors.any? %>
    <% @restaurant.errors.full_messages.each do |msg| %>
    <ul>
      <li><%= msg %></li>
    </ul>
    <% end %>
  <% end %>
</div>

<div>
  <%= form_for @restaurant do |f| %>
    <div>
      <%= f.label :name, "Name"%><br>
      <%= f.text_field :name %>
    </div><br>
    <div>
      <%= f.label :open_time, "Opening Time"%><br>
      <%= f.time_field :open_time %>
    </div><br>
    <div>
      <%= f.label :closing_time, "Closing Time"%><br>
      <%= f.time_field :closing_time %>
    </div><br>
    <div>
      <%= f.label :capacity, "Capacity" %><br>
      <%= f.text_field :capacity %>
    </div><br>
    <div>
      <%= f.label :description, "Description" %><br>
      <%= f.text_area :description %>
    </div><br>
    <div>
      <%= f.submit 'Submit' %>
    </div>
  <% end %>
</div>
